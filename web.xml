<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Database</servlet-name>
        <servlet-class>baza.Database</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Model</servlet-name>
        <servlet-class>models.Model</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Poruka</servlet-name>
        <servlet-class>models.Poruka</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Korisnik</servlet-name>
        <servlet-class>models.Korisnik</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistracijaServlet</servlet-name>
        <servlet-class>obrada.RegistracijaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrijavaServlet</servlet-name>
        <servlet-class>obrada.PrijavaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrijavljenServlet</servlet-name>
        <servlet-class>obrada.PrijavljenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PosaljiPorukuServlet</servlet-name>
        <servlet-class>obrada.PosaljiPorukuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Database</servlet-name>
        <url-pattern>/database</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Model</servlet-name>
        <url-pattern>/model</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Poruka</servlet-name>
        <url-pattern>/poruka</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Korisnik</servlet-name>
        <url-pattern>/korisnik</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistracijaServlet</servlet-name>
        <url-pattern>/registracija</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrijavaServlet</servlet-name>
        <url-pattern>/prijava</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrijavljenServlet</servlet-name>
        <url-pattern>/prijavljen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PosaljiPorukuServlet</servlet-name>
        <url-pattern>/posaljiporuku</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
